<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">
    <TextView
            android:text="Login Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLogin"
            tools:ignore="MissingConstraints" android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="168dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelEmail"
            tools:ignore="MissingConstraints" android:layout_marginTop="168dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelPassword"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/labelEmail"/>
    <EditText
            android:id="@+id/textUsername"
            android:layout_width="275dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:textSize="22sp"
            tools:ignore="MissingConstraints" app:layout_constraintStart_toEndOf="@+id/labelEmail"
            android:layout_marginStart="20dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textLogin"/>
    <EditText
            android:password="true"
            android:id="@+id/textPassword"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:textSize="22sp"
            tools:ignore="MissingConstraints" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textUsername" app:layout_constraintStart_toEndOf="@+id/labelPassword"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="Sign in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="204dp"
            app:layout_constraintTop_toBottomOf="@+id/textLogin"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="@string/hyperlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textHomePage"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="144dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnLogin"/>
    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="194dp"
            android:layout_height="53dp" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="108dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textHomePage"/>
    <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="424dp"
            android:layout_height="99dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="Copyright Â© Music Store, Inc."
                android:textColor="?attr/colorAccent"
                android:id="@+id/footer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textStyle="bold"
                android:layout_marginRight="5dip"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>