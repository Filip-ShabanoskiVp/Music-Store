<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout5">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorError"
            tools:ignore="MissingConstraints"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <TextView
            android:text="Register Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="204dp"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="104dp" app:layout_constraintTop_toBottomOf="@+id/toolbar4"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Password Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>
    <EditText

            android:layout_width="227dp"
            android:layout_height="47dp"
            android:textSize="22sp"
            android:id="@+id/editTextUsername" tools:ignore="MissingConstraints"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="60dp"/>
    <EditText

            android:layout_width="227dp"
            android:layout_height="46dp"
            android:textSize="22sp"
            android:id="@+id/editTextEmail" tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextUsername"
            app:layout_constraintStart_toEndOf="@+id/textView12" android:layout_marginStart="92dp"/>
    <EditText
            android:password="true"
            android:layout_width="227dp"
            android:layout_height="48dp"
            android:textSize="22sp"
            android:id="@+id/editTextPassword" tools:ignore="MissingConstraints"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
            app:layout_constraintStart_toEndOf="@+id/textView13" android:layout_marginStart="68dp"/>
    <EditText
            android:password="true"
            android:layout_width="231dp"
            android:layout_height="44dp"
            android:textSize="22sp"
            android:id="@+id/editTextPasswordConfirm" tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintStart_toEndOf="@+id/textView14" android:layout_marginStart="12dp"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="156dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/editTextPasswordConfirm"/>
    <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="424dp"
            android:layout_height="99dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="Copyright Â© Music Store, Inc."
                android:textColor="?attr/colorAccent"
                android:id="@+id/footer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textStyle="bold"
                android:layout_marginRight="5dip"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>