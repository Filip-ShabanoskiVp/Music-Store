<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="250dp" android:id="@+id/linearLayout8">
    <ImageView
            android:layout_width="176dp"
            android:layout_height="154dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageViewArtistImage"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewArtistName"/>
    <TextView
            android:text="Artist name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewArtistName"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Duration:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewDurationLbl"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageViewArtistImage"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewSonglbl"/>
    <TextView
            android:text="Album:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewAlbumLbl"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageViewArtistImage"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"/>
    <TextView
            android:text="duration_lbl"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textViewDuration"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/textViewDurationLbl"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSong"/>
    <TextView
            android:text="album_lbl"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewAlbum"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/textViewAlbumLbl"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"/>
    <TextView
            android:text="Song:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewSonglbl"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlbumLbl"
            app:layout_constraintStart_toEndOf="@+id/imageViewArtistImage"/>
    <TextView
            android:text="Song lbl"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewSong"
            tools:ignore="MissingConstraints"
            android:textSize="35px"
            app:layout_constraintStart_toEndOf="@+id/textViewSonglbl" android:layout_marginStart="16dp"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/textViewAlbum"/>

</androidx.constraintlayout.widget.ConstraintLayout>