<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="By all products"
                  android:layout_marginTop="10dp"
                  android:layout_centerHorizontal="true"
                  android:textSize="16sp"
                  android:id="@+id/textByProducts"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="20dp"
                  android:layout_below="@+id/textByProducts"
                  android:id="@+id/editFullName"
                  android:hint="Full Name"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="20dp"
                  android:layout_below="@+id/editFullName"
                  android:id="@+id/editCreditCart"
                  android:hint="Credit Cart"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="20dp"
                  android:layout_below="@+id/editCreditCart"
                  android:id="@+id/editCountry"
                  android:hint="Country"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="20dp"
                  android:layout_below="@+id/editCountry"
                  android:inputType="number"
                  android:id="@+id/editEmbg"
                  android:hint="Embg"/>
        <Button android:layout_width="match_parent"
                android:id="@+id/btnByProduct"
                android:layout_below="@+id/editEmbg"
                android:text="By Products"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="-1dp"/>

    </RelativeLayout>
</ScrollView>