<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorError"
            tools:ignore="MissingConstraints"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Music Store"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            android:layout_marginTop="120dp" android:layout_marginRight="136dp"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:src="@drawable/drums"
            android:id="@+id/imageView1"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="208dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:src="@drawable/acoustic"
            android:id="@+id/imageView2"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageView1" android:layout_marginStart="16dp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:src="@drawable/electric_guitar"
            android:id="@+id/imageView3"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="12dp"
            android:layout_marginTop="208dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:src="@drawable/image4"
            android:id="@+id/imageView4"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView1" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:src="@drawable/piano"
            android:id="@+id/imageView5"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:src="@drawable/piano_img1"
            android:id="@+id/imageView6"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="12dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <Button
            android:text="Products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnProducts"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="156dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"/>
    <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="424dp"
            android:layout_height="99dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="Copyright Â© Music Store, Inc."
                android:textColor="?attr/colorAccent"
                android:id="@+id/footer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textStyle="bold"
                android:layout_marginRight="5dip"/>
    </LinearLayout>
    <TextView
            android:text="@string/About_Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAboutUsActivity"
            app:layout_constraintTop_toBottomOf="@+id/btnProducts" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>